  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "ant-design-vue": "^2.2.8",
    "lodash": "^4.17.21",
    "vconsole": "^3.9.1",
    "vue": "^3.2.4",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*": [
      "eslint --ext .tsx,.ts --fix ./src",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
